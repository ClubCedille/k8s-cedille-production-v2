apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

namePrefix: {{ deployment_prefix }}-

resources:
  - ../../../../bases/grav

patches:
  - path: vault-patch.yaml
  - target:
      kind: HTTPProxy
      name: grav-ingress
    patch: |-
      - op: replace
        path: /spec/virtualhost/fqdn
        value: {{ hostname }}
      - op: replace
        path: /spec/virtualhost/tls/secretName
        value: {{ deployment_prefix }}-grav-tls
      - op: replace
        path: /spec/routes/0/services/0/name
        value: {{ deployment_prefix }}-grav
  - target:
      kind: Certificate
      name: grav-tls
    patch: |-
      - op: replace
        path: /spec/secretName
        value: {{ deployment_prefix }}-grav-tls
      - op: replace
        path: /spec/commonName
        value: {{ hostname }}
      - op: replace
        path: /spec/dnsNames/0
        value: {{ hostname }}
  - target:
      kind: RandomSecret
    patch: |-
      - op: replace
        path: /spec/path
        value: kv/data/{{ namespace }}/default/grav
