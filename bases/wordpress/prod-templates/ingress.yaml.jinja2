apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ nom_club }}-prod-ingress
  annotations:
    cert-manager.io/cluster-issuer: letsencrypt-http
    ingress.kubernetes.io/force-ssl-redirect: "true"
    kubernetes.io/tls-acme: "true"
spec:
  ingressClassName: contour
  tls:
    - hosts:
        - {{ hostname }}
      secretName: {{ nom_club }}-prod-tls
  rules:
    - host: {{ hostname }}
      http:
        paths:
          - pathType: Prefix
            path: /
            backend:
              service:
                name: wp-svc
                port:
                  number: 80
